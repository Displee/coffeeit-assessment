<androidx.constraintlayout.widget.ConstraintLayout
    style="@style/option_extra_container"
    android:layout_marginTop="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/icon"
        style="@style/option_icon"
        android:layout_marginEnd="@dimen/extra_icon_margin"
        android:src="@drawable/circle_empty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text"
        style="@style/option_text"
        android:layout_marginStart="@dimen/extra_icon_margin"
        android:text="@string/lungo"
        app:layout_constraintBottom_toBottomOf="@id/icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/icon" />

</androidx.constraintlayout.widget.ConstraintLayout>
